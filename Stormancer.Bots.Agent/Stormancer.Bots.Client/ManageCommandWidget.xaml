<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Stormancer.Bots.Client"
             x:Class="Stormancer.Bots.Client.ManageCommandWidget">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="0">
        <Entry Text="{Binding Command, Mode=TwoWay}"/>
        <Button Text="Run command" Command="{Binding RunCommandCommand}"/>
        </VerticalStackLayout>

        <CollectionView  Grid.Row="1" ItemsSource="{Binding CommandOutput}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:CommandResultOutputWidget BindingContext="{Binding}"/>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentView>
