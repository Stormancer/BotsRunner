<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:Stormancer.Bots.Client"
             x:Class="Stormancer.Bots.Client.MainPage">
    <Grid Padding="30,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <app:ManageAgentsWidget BindingContext="{Binding Agents}" Grid.Column="0"/>
        <app:ManageCommandWidget BindingContext="{Binding Command}" Grid.Column="1"/>
    </Grid>

</ContentPage>
